# TechNovaStore Cloudflare CDN Configuration
# Copy this file to .env.cloudflare and fill in your actual values

# ============================================================================
# CLOUDFLARE CREDENTIALS (Obtener de cloudflare.com)
# ============================================================================

# Tu email de Cloudflare
CLOUDFLARE_EMAIL=tu_email@gmail.com

# Global API Key (desde My Profile > API Tokens > Global API Key)
CLOUDFLARE_API_KEY=tu_global_api_key_aqui

# Zone ID (desde tu sitio en Cloudflare dashboard, panel derecho)
CLOUDFLARE_ZONE_ID=tu_zone_id_aqui

# ============================================================================
# DOMAIN CONFIGURATION
# ============================================================================

# Tu dominio o subdominio (elige una opción):
# Opción A: Subdominio de Cloudflare Workers
DOMAIN=technovastore-demo.workers.dev

# Opción B: Dominio gratuito de Freenom
# DOMAIN=technovastore.tk

# Opción C: Tu dominio personalizado
# DOMAIN=tudominio.com

# ============================================================================
# CDN CONFIGURATION
# ============================================================================

# Habilitar CDN (true/false)
CDN_ENABLED=true

# Cache TTL para diferentes tipos de contenido (en segundos)
CDN_STATIC_CACHE_TTL=31536000    # 1 año para archivos estáticos
CDN_IMAGE_CACHE_TTL=2592000      # 30 días para imágenes
CDN_API_CACHE_TTL=0              # Sin cache para API
CDN_HTML_CACHE_TTL=14400         # 4 horas para HTML

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Nivel de seguridad (off, essentially_off, low, medium, high, under_attack)
CLOUDFLARE_SECURITY_LEVEL=medium

# SSL Mode (off, flexible, full, strict)
CLOUDFLARE_SSL_MODE=full

# Habilitar HTTPS automático (true/false)
CLOUDFLARE_ALWAYS_USE_HTTPS=true

# Versión mínima de TLS (1.0, 1.1, 1.2, 1.3)
CLOUDFLARE_MIN_TLS_VERSION=1.2

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Habilitar minificación (true/false)
CLOUDFLARE_MINIFY_CSS=true
CLOUDFLARE_MINIFY_HTML=true
CLOUDFLARE_MINIFY_JS=true

# Habilitar Brotli compression (true/false)
CLOUDFLARE_BROTLI=true

# Habilitar HTTP/2 (true/false)
CLOUDFLARE_HTTP2=true

# Habilitar HTTP/3 (true/false)
CLOUDFLARE_HTTP3=true

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Modo desarrollo (desactiva cache temporalmente)
CLOUDFLARE_DEVELOPMENT_MODE=false

# Logging level (debug, info, warn, error)
CDN_LOG_LEVEL=info