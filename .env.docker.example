# Docker Compose Environment Variables
# Copy this file to .env and update with your secure passwords

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_secure_password_123

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=change_this_secure_password_456

# Redis Configuration
REDIS_PASSWORD=change_this_secure_password_789

# JWT Secret
JWT_SECRET=change_this_super_secret_jwt_key_with_at_least_32_characters

# Grafana Admin
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password

# SMTP Configuration (for notifications)
SMTP_USER=your-email@gmail.com
SMTP_PASS=REDACTED_SMTP_PASSWORD
