# TechNovaStore Staging Environment Configuration

# Environment
NODE_ENV=staging

# Database Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=staging_mongo_password_change_me
POSTGRES_USERNAME=admin
POSTGRES_PASSWORD=staging_postgres_password_change_me
REDIS_PASSWORD=staging_redis_password_change_me

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_change_me_to_something_very_secure

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@technovastore.com
SMTP_PASS=staging_smtp_password_change_me

# API URLs
NEXT_PUBLIC_API_URL=http://staging.technovastore.com:3000/api
NEXT_PUBLIC_APP_URL=http://staging.technovastore.com:3011
NEXT_PUBLIC_CHATBOT_URL=http://staging.technovastore.com:3009
NEXT_PUBLIC_SOCKET_URL=http://staging.technovastore.com:3009
FRONTEND_URL=http://staging.technovastore.com:3011

# OAuth Configuration (Staging)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=staging_google_client_id_change_me
NEXT_PUBLIC_GITHUB_CLIENT_ID=staging_github_client_id_change_me

# Analytics Configuration (Staging)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=staging_ga_id_change_me
NEXT_PUBLIC_SENTRY_DSN=staging_sentry_dsn_change_me

# External APIs (Staging/Sandbox)
AMAZON_API_KEY=staging_amazon_api_key
AMAZON_SECRET_KEY=staging_amazon_secret_key
ALIEXPRESS_API_KEY=staging_aliexpress_api_key
EBAY_API_KEY=staging_ebay_api_key
BANGGOOD_API_KEY=staging_banggood_api_key
NEWEGG_API_KEY=staging_newegg_api_key

# Monitoring and Logging
LOG_LEVEL=debug
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_NODE=http://elasticsearch:9200
ELASTICSEARCH_INDEX=technovastore-staging-logs
ALERTS_ENABLED=true
FILE_LOGGING_ENABLED=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://staging.technovastore.com:3011

# Performance
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=50