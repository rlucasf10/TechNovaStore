# TechNovaStore Production Environment Configuration
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
MONGO_ROOT_USERNAME=technovastore_admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here
POSTGRES_USER=technovastore_user
POSTGRES_PASSWORD=your_secure_postgresql_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Application Security
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
NODE_ENV=production

# Domain Configuration
DOMAIN=technovastore.com
API_DOMAIN=api.technovastore.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CHAIN_PATH=/etc/nginx/ssl/chain.pem

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@technovastore.com
SMTP_PASS=your_smtp_app_password_here

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
FULL_BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=technovastore-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key_here
BACKUP_S3_SECRET_KEY=your_s3_secret_key_here
BACKUP_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# External API Keys (for sync engine)
AMAZON_API_KEY=your_amazon_api_key_here
ALIEXPRESS_API_KEY=your_aliexpress_api_key_here
EBAY_API_KEY=your_ebay_api_key_here
BANGGOOD_API_KEY=your_banggood_api_key_here
NEWEGG_API_KEY=your_newegg_api_key_here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info
ELASTICSEARCH_ENABLED=false

# Resource Limits
MAX_MEMORY_API_GATEWAY=512M
MAX_CPU_API_GATEWAY=0.5
MAX_MEMORY_FRONTEND=512M
MAX_CPU_FRONTEND=0.5
MAX_MEMORY_SERVICES=256M
MAX_CPU_SERVICES=0.3